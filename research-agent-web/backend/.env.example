# Research Agent Web Backend Environment Variables

# Server Configuration
DEBUG=true
HOST=127.0.0.1
PORT=8000

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Optional: Google Scholar API for enhanced research
SERPAPI_API_KEY=your-serpapi-key-here

# Research Agent Settings
RESEARCH_AGENT_ROOT_PATH=/path/to/your/research_agent  # Update this path!
MAX_SOURCES=10
RELEVANCE_THRESHOLD=0.35
CONTENT_VALIDATION_THRESHOLD=0.65
CONSENSUS_THRESHOLD=0.6
RESEARCH_TIMEOUT_SECONDS=900

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Database (SQLite by default)
DATABASE_URL=sqlite:///./research_agent_web.db

# File Storage
UPLOAD_DIR=uploads
EXPORT_DIR=exports
MAX_UPLOAD_SIZE=10485760

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging Configuration (Fixed 50GB log file issue!)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/research_agent_web.log
LOG_FILE_ENABLED=true
LOG_MAX_BYTES=10485760  # 10MB per log file (prevents huge files)
LOG_BACKUP_COUNT=5      # Keep 5 backup files max